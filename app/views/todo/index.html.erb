<h1> Pending Tasks </h1>


<%= link_to 'Add new task', new_todo_path %>

<table>
    <tr>
        <th>title</th>
        <th>priority</th>
        <th>duedate</th>
        <th colspan = "2"></th>
    </tr>
    <% @todos.each do |todo| %>
        <tr>
            <td><%= todo.title %></td>
            <td><%= todo.priority %></td>
            <td><%= todo.duedate %></td>
            <td><%= link_to 'Show', todo_path(todo) %></td>
            <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        </tr>
    <% end %>
</table>
